{
    "sites": [
        {
            "name": "Amazon",
            "url": "https://www.amazon.com/computer",
            "actions": [
                {
                    "type": "click",
                    "selector": {
                        "by": "CSS_SELECTOR",
                        "value": "input.nav-input"
                    }
                },
                {
                    "type": "send_keys",
                    "selector": {
                        "by": "ID",
                        "value": "twotabsearchtextbox"
                    },
                    "value": "Laptop"
                },
                {
                    "type": "wait_for_element",
                    "selector": {
                        "by": "CSS_SELECTOR",
                        "value": "div.s-main-slot"
                    }
                },
                {
                    "type": "scroll",
                    "settings": {
                        "repetitions": 5,
                        "wait_time": 3
                    }
                },
                {
                    "type": "extract",
                    "selector": {
                        "by": "CSS_SELECTOR",
                        "value": "div.s-main-slot div.s-result-item"
                    },
                    "fields": [
                        {
                            "name": "name",
                            "selector": {
                                "by": "CSS_SELECTOR",
                                "value": "span.a-size-medium.a-color-base.a-text-normal"
                            }
                        },
                        {
                            "name": "price",
                            "selector": {
                                "by": "CSS_SELECTOR",
                                "value": "span.a-price-whole"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "Nike",
            "url": "https://www.nike.com",
            "actions": [
                {
                    "type": "click",
                    "selector": {
                        "by": "CSS_SELECTOR",
                        "value": "button.search-start-btn"
                    }
                },
                {
                    "type": "send_keys",
                    "selector": {
                        "by": "ID",
                        "value": "gn-search-input"
                    },
                    "value": "Nike Air Force 1"
                },
                {
                    "type": "wait_for_element",
                    "selector": {
                        "by": "CSS_SELECTOR",
                        "value": "div.product-grid"
                    }
                },
                {
                    "type": "scroll",
                    "settings": {
                        "repetitions": 5,
                        "wait_time": 3
                    }
                },
                {
                    "type": "extract",
                    "selector": {
                        "by": "CSS_SELECTOR",
                        "value": "div.product-grid div.product-card"
                    },
                    "fields": [
                        {
                            "name": "name",
                            "selector": {
                                "by": "CSS_SELECTOR",
                                "value": "div.product-card__title"
                            }
                        },
                        {
                            "name": "price",
                            "selector": {
                                "by": "CSS_SELECTOR",
                                "value": "div.product-price.is--current-price"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}
